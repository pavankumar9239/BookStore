@using BookStore.Models
@model IEnumerable<BookModel>



<div class="container">
    <h4 class="display-4">All Books</h4>
    <div class="row">
        @foreach(var b in Model)
        {


            <div class="col-md-4">
                <div class="card md-4 shadow-sm">
                    <svg class="bd-paceholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/TR/SVG" preserveAspectRatio="xMidYMid meet">
                        <div class="card-body">
                            <h3 class="card-title">@b.Title</h3>
                            <p class="card-text">@b.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" href ="/book/getbookbyid/@b.Id">View Details</a>
                                </div>
                                <small case="text-muted">@b.AuthorName</small>
                            </div>
                        </div>
                    </svg>
                </div>
            </div>
        }
        </div>
    </div>

